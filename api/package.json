{
  "name": "@leaky-bucket/api",
  "version": "1.0.0",
  "description": "Leaky Bucket API for Woovi Challenge",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "NODE_OPTIONS=\"--no-deprecation\" ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rimraf dist node_modules",
    "test:k6": "chmod +x ./run-k6-tests.sh && ./run-k6-tests.sh",
    "test:k6:simple": "chmod +x ./run-simple-test.sh && ./run-simple-test.sh",
    "test:k6:all": "chmod +x ./run-tests.sh && ./run-tests.sh",
    "test:k6:basic": "k6 run src/tests/k6-basic-connection-test.js",
    "test:all": "npm run test && npm run test:k6:basic && npm run test:k6"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "apollo-server-koa": "^3.13.0",
    "async-mutex": "^0.5.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "dotenv-safe": "^9.1.0",
    "graphql": "^16.11.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-jwt": "^4.0.4",
    "koa-router": "^13.0.1",
    "mongoose": "^8.14.1",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@types/dotenv-safe": "^8.1.6",
    "@types/jest": "^29.5.14",
    "@types/whatwg-mimetype": "^3.0.2",
    "babel-jest": "^29.7.0",
    "jest-mock-extended": "4.0.0-beta1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0"
  }
}
